<?xml version="1.0"?>
<robot name="head">
  <include filename="$(find pr2_defs)/calibration/default_cal.xml" />
  <include filename="$(find pr2_defs)/defs/head/alpha2_head_defs.urdf.xacro" />
  <include filename="$(find pr2_defs)/defs/head/head_sensor_package_defs.urdf.xacro" />
  <include filename="$(find pr2_defs)/defs/materials.urdf.xacro" />
  
  <pr2_head_alpha2b name="head" parent="base_link">
    <origin xyz="0 0 0.3815" rpy="0 0 0" />
  </pr2_head_alpha2b>

  <pr2_tilting_laser laser_calib_ref="0.0" name="laser_tilt" parent="base_link">
    <origin xyz="0.1 0 0.19525" rpy="0 0 0" />
  </pr2_tilting_laser>
  
  <!-- Solid Base for visualizer -->
  <joint name="base_joint" type="fixed">
    <parent link="world" />
    <origin xyz="0 0 0" rpy="0 0 0" /> 
    <child link="base_link" />
  </joint>

  <link name="base_link">
    <inertial>
      <mass value="1000" />
      <origin xyz=" 0 0 0 " /> 
      <inertia ixx="1000" ixy="0" ixz="0" iyy="1000" iyz="0" izz="1000" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0 " /> 
      <geometry name="pr2_base_mesh_file">
        <mesh scale="20 20 0.01" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0 " />
      <geometry name="base_collision_geom">
        <box size="1 1 1" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="base_link" >
    <material>Gazebo/White</material>
  </gazebo>

</robot>
