<launch>
  <!-- Trigger controller -->
  <node pkg="mechanism_control" type="spawner.py" args="trigger_controller.xml" />
  
  <!-- Camera -->
  <group ns="forearm">
    <param name="if_name" type="str" value="eth2"/>
    <param name="ip_address" type="str" value="192.168.202.2"/>
    <param name="serial_number" type="int" value="-1"/>
    <param name="video_mode" type="str" value="320x240x30"/>
    <param name="ext_trigger" type="bool" value="True"/>
    <param name="trigger_controller" type="string" value="trig_controller"/>
  </group>
  <node name="forearm" pkg="forearm_cam" type="forearm_node" respawn="false" output="screen"/>
</launch>
