<launch>

  <group ns="calibration_config" clear_params="true">

    <group ns="sensors">
      <param name="all"    textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/sensors.yaml" />
    </group>

    <group ns="cal_steps">

      <group ns="A - 00 - Estimating Checkerboard Locations With 3D Sensors">
        <param name="free_params" textfile="$(find pr2_bringup_tests)/calibration_bringup/free_cb_poses.yaml" />
        <param name="use_cov" type="bool" value="False" />
        <rosparam>
          sensors:
          - left_arm_chain
          - right_arm_chain
          - tilt_laser
        </rosparam>
        <param name="output_filename" type="string" value="head_laser_0" />
      </group>

      <group ns="A - 01 - Estimating Checkerboard Locations With All Sensors">
        <param name="free_params" textfile="$(find pr2_bringup_tests)/calibration_bringup/free_cb_poses.yaml" />
        <param name="use_cov" type="bool" value="True" />
        <rosparam>
          sensors:
          - narrow_left_rect
          - narrow_right_rect
          - wide_left_rect
          - wide_right_rect
          - tilt_laser
          - left_arm_chain
          - right_arm_chain
          - forearm_left_rect
          - forearm_right_rect
        </rosparam>
        <param name="output_filename" type="string" value="system_calibrated" />
      </group>

    </group>

    <param name="initial_system" textfile="$(find pr2_calibration_launch)/estimate_params/config_pr2_beta/system.yaml" />

  </group>

</launch>
